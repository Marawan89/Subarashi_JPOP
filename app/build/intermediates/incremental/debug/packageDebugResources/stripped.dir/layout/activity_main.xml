<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/animeButton_wall"
        android:layout_width="414dp"
        android:layout_height="378dp"
        android:contentDescription="@string/anime_wallpaper"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anime_wall" />

    <ImageView
        android:id="@+id/mangaButton_wall"
        android:layout_width="416dp"
        android:layout_height="361dp"
        android:contentDescription="@string/manga_wallpaper"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animeButton_wall"
        app:srcCompat="@drawable/manga_wall" />

    <Button
        android:id="@+id/animeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/anime_world"
        app:layout_constraintBottom_toTopOf="@+id/mangaButton_wall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/animeButton_wall" />

    <Button
        android:id="@+id/mangaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manga_world"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animeButton_wall" />

</androidx.constraintlayout.widget.ConstraintLayout>